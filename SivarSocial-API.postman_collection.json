{
    "info": {
        "name": "SivarSocial API",
        "description": "API para la aplicación SivarSocial",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000/api",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Test Connection",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/test",
                            "host": ["{{base_url}}"],
                            "path": ["test"]
                        }
                    }
                },
                {
                    "name": "Register",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.json().success) {",
                                    "    pm.globals.set('token', pm.response.json().data.token);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Usuario Test\",\n    \"username\": \"usertest\",\n    \"email\": \"test@ejemplo.com\",\n    \"password\": \"12345678\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "register"]
                        }
                    }
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.json().success) {",
                                    "    pm.globals.set('token', pm.response.json().data.token);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@ejemplo.com\",\n    \"password\": \"12345678\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "login"]
                        }
                    }
                },
                {
                    "name": "Me",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/auth/me",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "me"]
                        }
                    }
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/auth/logout",
                            "host": ["{{base_url}}"],
                            "path": ["auth", "logout"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Posts",
            "item": [
                {
                    "name": "Get Posts",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/posts",
                            "host": ["{{base_url}}"],
                            "path": ["posts"]
                        }
                    }
                },
                {
                    "name": "Create Post (Image)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "descripcion",
                                    "value": "Mi primer post desde API",
                                    "type": "text"
                                },
                                {
                                    "key": "tipo",
                                    "value": "imagen",
                                    "type": "text"
                                },
                                {
                                    "key": "imagen",
                                    "type": "file",
                                    "src": []
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/posts",
                            "host": ["{{base_url}}"],
                            "path": ["posts"]
                        }
                    }
                },
                {
                    "name": "Create Post (Music)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"descripcion\": \"Mi canción favorita\",\n    \"tipo\": \"musica\",\n    \"artista\": \"Artista Test\",\n    \"titulo\": \"Canción Test\",\n    \"album\": \"Album Test\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/posts",
                            "host": ["{{base_url}}"],
                            "path": ["posts"]
                        }
                    }
                },
                {
                    "name": "Get Single Post",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/posts/1",
                            "host": ["{{base_url}}"],
                            "path": ["posts", "1"]
                        }
                    }
                },
                {
                    "name": "Delete Post",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/posts/1",
                            "host": ["{{base_url}}"],
                            "path": ["posts", "1"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Users",
            "item": [
                {
                    "name": "Get Users",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/users",
                            "host": ["{{base_url}}"],
                            "path": ["users"]
                        }
                    }
                },
                {
                    "name": "Search Users",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/users/search?q=test",
                            "host": ["{{base_url}}"],
                            "path": ["users", "search"],
                            "query": [
                                {
                                    "key": "q",
                                    "value": "test"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get User",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/users/1",
                            "host": ["{{base_url}}"],
                            "path": ["users", "1"]
                        }
                    }
                }
            ]
        }
    ]
}
